<%@ page import="java.sql.*" %>
<HTML>
    <HEAD>
        <TITLE>Filling a Table</TITLE>
    </HEAD>

    <BODY>
        <H1>Table Data</H1>

	<%  
            Connection connection = null;
            Class.forName("com.mysql.cj.jdbc.Driver");
            connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/basketball", "root", "Basketball31!");

            Statement statement = connection.createStatement();

            ResultSet resultset = statement.executeQuery("SELECT * FROM players LIMIT 10");

            while(resultset.next()){ 
	%>
            <TABLE BORDER="1">
                <TR>
                    <TH>ID</TH>
                    <TH>Name</TH>
                </TR>
                <TR>
                    <TD> <%= resultset.getString(1) %> </TD>
                    <TD> <%= resultset.getString(2) %> </TD>
                </TR>
            </TABLE>
	<% 
            } 
	%>
    </BODY>
</HTML>